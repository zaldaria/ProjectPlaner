@model ProjectPlaner.Models.Entity.Task
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

<h1>Edit</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="taskId" />
            <div class="form-group">
                <label asp-for="name" class="control-label">Task name</label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="projectId" class="control-label">Project name</label>
                <select asp-for="projectId" class="form-control" asp-items="ViewBag.projectId"></select>
                <span asp-validation-for="projectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label">Status</label>
                <select asp-for="status" asp-items="Html.GetEnumSelectList<ProjectPlaner.Models.Entity.Task.TaskStatus>()" class="form-control"></select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="marker" class="control-label">Marker</label>
                <select asp-for="marker" asp-items="Html.GetEnumSelectList<ProjectPlaner.Models.Entity.Task.TaskMarker>()" class="form-control"></select>
                <span asp-validation-for="marker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time_limit" class="control-label">Time-limit</label>
                <input asp-for="time_limit" class="form-control" />
                <span asp-validation-for="time_limit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label">Description</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Index">Back to List</a>
                }
                else
                {
                    <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Index">Back</a>
                }
            </div>
        </form>
    </div>
</div>

