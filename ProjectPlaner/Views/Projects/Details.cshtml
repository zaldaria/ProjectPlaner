@model ProjectPlaner.Models.Entity.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            User:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.UserName)
        </dd>
        <dt class = "col-sm-2">
            Client:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.client.name)
        </dd>
        <dt class = "col-sm-2">
            Comment:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.comment)
        </dd>
        <dt class = "col-sm-2">
            Deadline:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.deadline)
        </dd>
        <dt class = "col-sm-2">
            Description:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.projectId">Edit</a> |
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Index">Back</a>
    }
</div>
