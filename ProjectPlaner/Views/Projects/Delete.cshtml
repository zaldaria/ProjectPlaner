@model ProjectPlaner.Models.Entity.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Client
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.client.name)
        </dd>
        <dt class = "col-sm-2">
            Comment
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.comment)
        </dd>
        <dt class = "col-sm-2">
            Deadline
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.deadline)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="projectId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Index">Back to List</a>
        }
        else
        {
            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="ProjectTasks" asp-route-id="@Model.projectId">Back</a>
        }
    </form>
</div>
