@model ProjectPlaner.Models.Entity.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Client name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            User:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.user.UserName)
        </dd>
        <dt class = "col-sm-2">
            Phone:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.phone)
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.clientId">Edit</a> |
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Index">Back to List</a>
    }
    else
    {
        <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Index">Back</a>
    }
</div>
